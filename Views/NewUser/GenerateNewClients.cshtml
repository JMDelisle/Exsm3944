@{
}

<h1>Create A New User To Open Your Account!</h1>
<p>@(ViewData["AccountTypes"] as string)</p>
<p>@ViewBag.TestBag</p>

@if (ViewData["Exceptions"] != null)
{
    <ul>
        @foreach (Exception sub in (ViewData["Exceptions"] as BLLValidationException).SubExceptions)
        {
            <li>@sub.Message</li>
        }
    </ul>
}
<form asp-action="DoTheGeneration">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Client</label>
        <input type="text" class="form-control" name="customerId" />
    </div>
    <div class="form-group">
        <label class="control-label">Account</label>
        <input type="text" class="form-control" name="productId" />

        <label class="control-label">Account Type</label>
        <input name="qty" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>